{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SQLSynthGen Config",
  "description": "A SQLSynthGen configuration YAML file",
  "type": ["object"],
  "additionalProperties": false,
  "properties": {
    "use-asyncio": {
      "type": "boolean"
    },
    "row_generators_module": {
      "type": "string"
    },
    "story_generators_module": {
      "type": "string"
    },

    "src-stats": {
      "type": "array",
      "items": {
        "additionalProperties": false,
        "required": ["name", "query"],
        "properties": {
          "name": {
            "type": "string"
          },
          "query": {
            "type": "string"
          },
          "dp-query": {
            "type": "string"
          },
          "epsilon": {
            "type": "number"
          },
          "delta": {
            "type": "number"
          },

          "snsql-metadata": {
            "type": "object",
            "properties": {
              "censor_dims": {
                "type": "boolean"
              }
            },
            "patternProperties": {
              "^(?!censor_dims).*$": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "private_id": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    },

    "story_generators": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "num_stories_per_pass"],
        "properties": {
          "name": {
            "type": "string"
          },
          "args": {
            "type": "array"
          },
          "kwargs": {
            "type": "object"
          },
          "num_stories_per_pass": {
            "type": "integer"
          }
        }
      }
    },

    "max-unique-constraint-tries": {
      "type": "integer"
    },

    "tables": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "vocabulary_table": {
              "type": "boolean"
            },
            "num_rows_per_pass": {
              "type": "integer"
            },
            "row_generators": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "args": {
                    "type": "array"
                  },
                  "kwargs": {
                    "type": "object"
                  },
                  "columns_assigned": {
                    "type": ["array", "string"],
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
